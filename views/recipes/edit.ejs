<% layout('layouts/boilerplate')%>
    <div class="row p-2" id="edit">
        <h1 class="text-center">Edit Recipe</h1>
        <div class="col-6 offset-3">
            <form action="/recipes/<%=rec._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Food item</label>
                    <input class="form-control" type="text" id="title" name="rec[title]" value="<%=rec.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="description">Recipe</label>
                    <textarea class="form-control" type="text" id="description" name="rec[description]"
                        required><%= rec.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Recipe</button>
                </div>
            </form>
            <a href="/recipes/<%= rec._id%>">Back To Reviews</a>

        </div>
    </div>